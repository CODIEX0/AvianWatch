<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    app:cardElevation="30dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/text_color">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPlantImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeColor="@color/background_color"
            app:strokeWidth="2dp"
            tools:visibility="visible">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:id="@+id/tvpn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Name: "
            android:textColor="@color/background_color"
            android:textFontWeight="600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgPlantImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textFontWeight="600"
            android:textColor="@color/background_color"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvpn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Date: "
            android:textColor="@color/background_color"
            android:textFontWeight="600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgPlantImage"
            app:layout_constraintTop_toBottomOf="@+id/tvPlantName" />

        <TextView
            android:id="@+id/tvDateObserved"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/background_color"
            android:textFontWeight="600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvps"
            app:layout_constraintTop_toBottomOf="@+id/tvPlantName" />

        <TextView
            android:id="@+id/tvpsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="Location: "
            android:textColor="@color/background_color"
            android:textFontWeight="600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgPlantImage"
            app:layout_constraintTop_toBottomOf="@+id/tvPlantName" />

        <TextView
            android:id="@+id/tvRegion"
            android:layout_width="185dp"
            android:layout_height="38dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/background_color"
            android:textFontWeight="600"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/tvps"
            app:layout_constraintTop_toBottomOf="@+id/tvPlantName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>